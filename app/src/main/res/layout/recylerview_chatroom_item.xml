    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chatroomitemcard"
